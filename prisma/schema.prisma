// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

// model for a single wishlist item
model WishlistItem {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  url       String
  image_url String
  wishlist_id Int
  user_id   Int
}

// model for a single wishlist
model Wishlist {
  id          Int             @id @default(autoincrement())
  name        String
  description String
  user_id     Int @unique
}